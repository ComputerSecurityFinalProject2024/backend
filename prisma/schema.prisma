generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
    id Int @id @default(autoincrement())
}

model Session {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    isExpired Boolean @default(true)
    users User[]
    services Service[]
}

// Implicit many-to-many relation User-Service
model User {
    id Int @id @default(autoincrement())
    name String
    session Session @relation(fields: [sessionId], references: [id])
    sessionId Int
    services Service[]
}

// Implicit many-to-many relation User-Service
model Service {
    id Int @id @default(autoincrement())
    name String
    session Session @relation(fields: [sessionId], references: [id])
    sessionId Int
    users User[]
}
